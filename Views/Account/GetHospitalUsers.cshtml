@using DonorTestWithIndividual.Data;
@model CreateUserModel
@{
    ViewData["Title"] = "GetUsers";
}

<h2>Hospitals List</h2>
<br />
@{
    List<RegisteredPerson> hospitals = (List<RegisteredPerson>)ViewBag.Hospitals;
}
@if (hospitals.Count == 0)
{
    <p>No Hospitals found</p>
}
else
{
    <table border="1" class="table table-striped table-bordered">
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Password</th>
            <th></th>
        </tr>

        @foreach (var user in ViewBag.Hospitals)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.Email</td>
                <td>@user.Password</td>
                <td>
                    @*<i class="fas fa-trash-alt">@Html.ActionLink()</i>*@
                    <a href="@Url.Action("DeleteHospital", "Account", new { Email = user.Email })"><i class="fas fa-trash-alt"></i></a>
                    <a asp-action="EditHospital" asp-controller="Account"><i class="fas fa-pencil-alt"></i></a>
                </td>
            </tr>
        }
    </table>
}
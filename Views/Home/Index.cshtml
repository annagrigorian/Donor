@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center text-danger ">
    <h2 class="display-4">Be a hero Give Blood</h2>
</div>
<br />
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000" style="width: 700px; height:350px; top: 0px; left: 50%; transform: translateX(-50%);">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img src="~/css/________-3.gif" class="img-fluid" style="width:700px; height: 350px" />
        </div>
        <div class="carousel-item">
            <img src="~/css/drawing-contest-blood-donation-11.gif" class="img-fluid" style="width:700px; height: 350px" />
        </div>
        <div class="carousel-item">
            <img src="~/css/175-1754180_donation-transparent-blood-blood-donation-with-a-transparent.png.jpg" class="img-responsive" style="width:700px; height: 350px" />
        </div>
        <div class="carousel-item">
            <img src="~/css/dailyui-014.gif" class="img-responsive" style="width:700px; height: 350px" />
        </div>
        <div class="carousel-item">
            <img src="~/css/donate-blood-header.png" class="img-responsive" style="width:700px; height: 350px" />
        </div>
        <div class="carousel-item">
            <img src="~/css/newsletter92_focus.jpg" class="img-responsive" style="width:700px; height: 350px" />
        </div>
        <div class="carousel-item">
            <img src="~/css/Blood_Bank.jpg" class="img-responsive" style="width:700px; height: 350px" />
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
